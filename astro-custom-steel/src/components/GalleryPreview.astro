---
import { Image } from "astro:assets";
import { urlFor } from "../lib/SanityImageUrl";

const { images, lang } = Astro.props;

---

<style>
  .images {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    grid-auto-flow: dense;
    gap: 1rem;
    margin-bottom: 2.5rem;

    @media (min-width: 1280px) {
      grid-template-columns: repeat(5, minmax(0, 1fr));
      grid-template-rows: repeat(3, minmax(0, 1fr));
    }
  }

  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .images img:nth-child(1){
    grid-column: 1 / span 3;
    grid-row: 1 / span 3;
  }

  .images img:nth-child(2){

      grid-column: span 3;
      grid-row: span 3;

    @media (min-width: 1280px){
      grid-column: 4 / span 2;
      grid-row: 1 / span 2;
    }
  }

  .images img:nth-child(3){
    grid-column: span 2;

    @media (min-width: 1280px){
      grid-column: span 1;
      grid-row: span: 1;
    }
  }

  .images img:nth-child(4){
    grid-column: span 1;
    grid-row: span 1;
  }

</style>

<div class="images">
  {
    images &&
    images.map((item: any) => {
      // 1. Wyciągamy URL tylko jeśli image istnieje
      if (!item.image) return null;

      // 2. Generujemy zoptymalizowany URL (WebP, jakość 80)
      const imgUrl = urlFor(item.image).format("webp").quality(80).url();
      
      // 3. Generujemy srcset dla responsywności (300w, 600w, 900w, 1200w)
      const srcset = `
        ${urlFor(item.image).width(300).format("webp").quality(80).url()} 300w,
        ${urlFor(item.image).width(600).format("webp").quality(80).url()} 600w,
        ${urlFor(item.image).width(900).format("webp").quality(80).url()} 900w,
        ${urlFor(item.image).width(1200).format("webp").quality(80).url()} 1200w
      `;

      return (
        <img 
          src={imgUrl} 
          srcset={srcset}
          sizes="(min-width: 1280px) 20vw, (min-width: 768px) 33vw, 100vw"
          alt={item.alt || "Zdjęcie realizacji Custom-Steel"} 
          loading="lazy"
          decoding="async"
          width="600"
          height="400"
        />
      );
    })
  }
</div>
