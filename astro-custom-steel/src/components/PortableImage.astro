---
import { urlFor } from "../lib/SanityImageUrl";
const { node } = Astro.props;
---

<figure class="portable-image">
  {
    node.asset && (
      <img
        src={urlFor(node).width(1000).url()}
        alt={node.alt || ""}
        loading="lazy"
      />
    )
  }
  {node.caption && <figcaption>{node.caption}</figcaption>}
</figure>

<style>
  .portable-image {
    margin: 2rem 0;
  }
  img {
    width: 100%;
    border-radius: 4px;
  }
</style>
