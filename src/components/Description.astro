---
import Title from "./Title.astro";

interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<style>
  p {
    font-size: 5vw;
    text-align: justify;
    @media (min-width: 1024px) {
      font-size: 2.5vw;
    }
  }
</style>

<div>
  <Title title={title} />
  <p>{text}</p>
</div>
