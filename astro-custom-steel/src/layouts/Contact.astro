---
import { sanityClient } from "sanity:client";
import Layout from "./Layout.astro";
import ContactForm from "../components/Contact.astro";

const { lang } = Astro.params;

const data = await sanityClient.fetch(
  `*[_type == "contact"][0] {
    "slug": slug[$lang],
    "seoMeta": seoMeta
  }`,
  { lang },
);
---

<Layout
  lang={lang}
  title={data?.seoMeta?.title?.[lang] || ""}
  description={data?.seoMeta?.description?.[lang] || ""}
>
  <div class="margin margin-top"><ContactForm /></div>
</Layout>
